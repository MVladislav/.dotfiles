### FIND ###
alias find-no='sudo /usr/bin/find / -nouser -o -nogroup -ls 2>/dev/null'
find-g() {
  sudo /usr/bin/find / \
    -not -regex '/home/.*' \
    -not -regex '/mnt/.*' \
    -not -regex '/media/.*' \
    -not -regex '.*/\.cache/.*' \
    -not -regex '/proc/.*' \
    -not -regex '/sys/.*' \
    -not -regex '/var/log/.*' \
    -newermt "-${1:-5} minute" -ls 2>/dev/null
}
find-l() {
  /usr/bin/find "${2:-.}" \
    -not -regex "${3:-x}" \
    -newermt "-${1:-5} minute" -ls 2>/dev/null
}

