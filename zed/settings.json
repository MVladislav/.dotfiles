  "features": {
    "inline_completion_provider": "none"
  },
  "wrap_guides": [
    80,
    130
  ],
  "show_wrap_guides": true,
  "soft_wrap": "editor_width",
  "cursor_blink": false,
  "cursor_shape": "bar",
  "ui_font_family": "Hack Nerd Font Mono",
  "ui_font_size": 16,
  "ui_font_weight": 400,
  "buffer_font_family": "Hack Nerd Font Mono",
  "buffer_font_size": 16.0,
  "buffer_font_weight": 400,
  "buffer_line_height": {
    "custom": 1.25
  },
  "tab_size": 2,
  "terminal": {
    "dock": "bottom",
    "font_size": 16,
    "font_family": "Hack Nerd Font Mono",
    "line_height": {
      "custom": 1.25
    }
  },
  "theme": {
    "mode": "system",
    "light": "Rosé Pine Dawn",
    "dark": "Rosé Pine Moon"
  },
  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Zed (Default)"
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  // "vim_mode": true,
  "base_keymap": "VSCode",
  "use_autoclose": true,
  "current_line_highlight": "all",
  "indent_guides": {
    "enabled": true
  },
  "inlay_hints": {
    "enabled": true
  },
  "scrollbar": {
    "show": "auto"
  },
  "hour_format": "hour24",
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "delay_ms": 200
    }
  },
  "use_on_type_format": false,
  "format_on_save": "on",
  "languages": {
    "Markdown": {
      "preferred_line_length": 130,
      "format_on_save": "on"
    },
    "SQL": {
      "formatter": "prettier"
    },
    "JSON": {
      "prettier": {
        "allowed": true,
        "parser": "json"
      }
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Rust": {
      "use_on_type_format": false
    }
  },
  "file_types": {
    "ansible": [
      "**/defaults/**/*",
      "**/tasks/**/*.yml",
      "**/handler/*.yml",
      "**/*_vars/**/*.yml",
      "**/roles/**/*.yml",
      "**/playbooks/**/*.yml",
      "**/*ansible*/**/*.yml",
      "**/vars/**/*.yml",
      "**/inventory/*/*"
    ],
    "Docker Compose": [
      "docker-compose*"
    ],
    "Dockerfile": [
      "Dockerfile*"
    ],
    "env": [
      ".env"
    ],
    "Git Ignore": [
      ".gitignore",
      ".dockerignore",
      ".gitattributes"
    ],
    "YAML": [
      "*.yaml",
      ".yamllint"
    ]
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings"
  ],
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
